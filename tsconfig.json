{
  "compilerOptions": {
    "baseUrl": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015"
    ],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors":true,
  },
  "include": ["src/**/*.ts", "src/**/*tsx", "src/**/*.d"]
}
